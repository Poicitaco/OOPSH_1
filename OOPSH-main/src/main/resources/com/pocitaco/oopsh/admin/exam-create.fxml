<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pocitaco.oopsh.controllers.admin.ExamCreateController" styleClass="content-area" spacing="20">
    <children>
        <Label styleClass="page-title" text="Create New Exam Type" />
        <GridPane hgap="20" vgap="15">
            <padding>
                <Insets top="20" />
            </padding>

            <Label text="Code:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <MFXTextField fx:id="txtCode" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Name:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <MFXTextField fx:id="txtName" GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Description:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <MFXTextField fx:id="txtDescription" GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Fee:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <MFXTextField fx:id="txtFee" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Theory Pass Score:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <MFXTextField fx:id="txtTheoryPassScore" GridPane.rowIndex="4" GridPane.columnIndex="1" />

            <Label text="Practice Pass Score:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
            <MFXTextField fx:id="txtPracticePassScore" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        </GridPane>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <MFXButton fx:id="btnCancel" styleClass="btn-secondary" text="Cancel" />
                <MFXButton fx:id="btnSave" styleClass="btn-primary" text="Save Exam Type" />
            </children>
        </HBox>
    </children>
</VBox>
